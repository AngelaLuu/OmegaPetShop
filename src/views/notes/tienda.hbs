 <!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>OmegaPetShop</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet"> 

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Flaticon Font -->
    <link href="lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Topbar Start -->
    
        <div class="row py-3 px-lg-5">
            <div class="col-lg-4">
                <a href="" class="navbar-brand d-none d-lg-block">
                    <h1 class="m-0 display-5 text-capitalize"><span class="text-primary">Omega</span>PetShop</h1>
                </a>
            </div>
            <div class="col-lg-8 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <div class="d-inline-flex flex-column text-center pr-3 border-right">
                        <h6>Compra en linea</h6>
                        <p class="m-0">24 Horas</p>
                    </div>
                    <div class="d-inline-flex flex-column text-center px-3 border-right">
                        <h6>Correo</h6>
                        <p class="m-0">OmegaPetSho@gmail.com</p>
                    </div>
                    <div class="d-inline-flex flex-column text-center pl-3">
                        <h6>Llama aqui</h6>
                        <p class="m-0">+57 3057543675</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-lg-5">
            <a href="" class="navbar-brand d-block d-lg-none">
                <h1 class="m-0 display-5 text-capitalize font-italic text-white"><span class="text-primary">Safety</span>First</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-3" id="navbarCollapse">
                <div class="navbar-nav mr-auto py-0">
                    <a href="/notes/add" class="nav-item nav-link">Registra algun prodcuto</a>
                    <a href="/" class="nav-item nav-link">Cerrar Sesion</a>
                    
                    
                    <div class="nav-item dropdown">
                        </div>
                    </div>
                </div>
                
            </div>
        </nav>
    </div>
    <!-- Navbar End -->


    <!-- Blog Start -->
    <div class="container pt-5">
        <div class="d-flex flex-column text-center mb-5 pt-5">
            <h1 class="display-4 m-0"><span class="text-primary">Nuestros</span>Productos</h1>
        </div>
            <!-- Agregar este formulario antes del bucle each -->
            <div class="row">
                <div class="col-lg-12 mb-4">
                    <form action="/filtro" method="POST">
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <select class="form-control" name="nombreTienda">
                                    <option value="" selected>Todas las tiendas</option>
                                    <!-- Aquí obtendrás la lista única de nombres de tiendas desde tu base de datos -->
                                    <!-- Por ahora, puedes proporcionar algunos valores de ejemplo -->
                                    <option value="LunaStore">LunaStore</option>
                                    <option value="Blacky">Blacky</option>
                                    <option value="GusPet">GusPet</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-primary" type="submit">Filtrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        <!-- ... (código anterior) ... -->

            <div class="row pb-3">
                {{#each notes}}
                    <div class="col-lg-4 mb-4">
                        <div class="card border-0 mb-3 m-2">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <div style="height: 100%;">
                                        <img style="object-fit: cover; width: 100%; height: 100%;" src="{{imagen}}" alt="">
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body bg-light p-4">
                                        <h4 class="card-title text-truncate">{{nombreProducto}}</h4>
                                        <div class="d-flex mb-3">
                                            <small class="mr-2"><i class="fa fa-user text-muted"></i> {{nombreTienda}}</small>
                                            <small class="mr-2"><i class="fa fa-folder text-muted"></i> {{precio}}</small>
                                            <small class="mr-2"><i class="fa fa-comments text-muted"></i></small>
                                        </div>
                                        <p>{{descripcion}}</p>
                                        <a class="font-weight-bold" href="">Comprar Ahora</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{else}}
                    <div class="col-lg-12">
                        <div class="card mx-auto">
                            <p>No hay productos registrados aún</p>
                            <a href="/notes/add" class="btn btn-dark">Crear un producto</a>
                        </div>
                    </div>
                {{/each}}
            </div>

<!-- ... (código posterior) ... -->

            <div class="col-lg-12">
                <nav aria-label="Page navigation">
                  <ul class="pagination justify-content-center mb-4">
                    <li class="page-item disabled">
                      <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo; Previous</span>
                      </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                      <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">Next &raquo;</span>
                      </a>
                    </li>
                  </ul>
                </nav>
            </div>
        </div>
    </div>
    <!-- Blog End -->


    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white mt-5 py-5 px-sm-3 px-md-5">
        <div class="row pt-5">
            <div class="col-lg-4 col-md-12 mb-5">
                <h1 class="mb-2 display-8 text-capitalize text-white"><span class="text-primary">Omega</span>PetShop</h1>
                <p class="m-0">Esta página web esta diseñada para que todas las tiendas del sector puedan acceder y agregar los articulos que tengan en venta</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="col-md-4 mb-5">
                        <h5 class="text-primary mb-4">Contactanos</h5>
                        <p><i class="fa fa-map-marker-alt mr-2"></i>cra 15 b este</p>
                        <p><i class="fa fa-phone-alt mr-2"></i>+57 3057543675</p>
                        <p><i class="fa fa-envelope mr-2"></i>OmegaPetSho@gmail.com</p>
                        <div class="d-flex justify-content-start mt-4">
                            <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 36px; height: 36px;" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 36px; height: 36px;" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 36px; height: 36px;" href="#"><i class="fab fa-linkedin-in"></i></a>
                            <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 36px; height: 36px;" href="#"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <div class="d-flex flex-column justify-content-start">
                        </div>
                    </div>
                
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid text-white py-4 px-sm-3 px-md-5" style="background: #111111;">
        <div class="row">
            <div class="col-md-6 text-center text-md-left mb-3 mb-md-0">
                <p class="m-0 text-white">
                    &copy; <a class="text-white font-weight-bold" href="#">OmegaPetShop</a>
                    <a class="text-white font-weight-bold" href="https://htmlcodex.com"></a>
                </p>
            </div>
            <div class="col-md-6 text-center text-md-right">
                <ul class="nav d-inline-flex">
                    <li class="nav-item">
                        <a class="nav-link text-white py-0" href="#">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white py-0" href="#">Terms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white py-0" href="#">FAQs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white py-0" href="#">Help</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Footer End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>
 
